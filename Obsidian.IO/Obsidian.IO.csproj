<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <TargetsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</TargetsWindows>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Console\CommandLine.Windows.cs" />
    <Compile Remove="Console\CommandLine.Common.cs" />
    <Compile Remove="Console\NativeMethods.cs" />
  </ItemGroup>

  <!-- Windows -->
  <ItemGroup Condition="'$(TargetsWindows)' == 'true'">
    <Compile Include="Console\CommandLine.Windows.cs" />
    <Compile Include="Console\NativeMethods.cs" />
  </ItemGroup>
  
  <!-- Non-Windows -->
  <ItemGroup Condition="'$(TargetsWindows)' == 'false'">
    <Compile Include="Console\CommandLine.Common.cs" />
  </ItemGroup>

</Project>
